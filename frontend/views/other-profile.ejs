<%- include("partials/header") %>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-4 text-center p-3">
            <div id="profile" class="profile">
                <div class="profile-pic-container">
                    <img src="/profile/<%= profile._id %>/picture" class="rounded-circle profile-pic"> <br>
                </div>
                <h1 class="mt-3"> <%= profile.fullName %></h1>
                <h3>@<%=profile.username%></h3>
                <p class="lead"><%= profile.bio%></p>
                <p class="lead">Following: <%= profile.following.length%> </p>
                <p class="lead">Followers: <%= profile.followers.length%> </p>
                <% if (f) { %>
                    <a href="/follow/<%= profile._id %>" class="btn btn-primary" style="width: 100%;">Following <i class="fas fa-check"></i></a>
                <% } else {  %>
                    <a href="/follow/<%= profile._id %>" class="btn btn-primary" style="width: 100%;"> Follow</a>
                <% }%>
            </div>
        </div>
        <div class="col-12 col-lg-6">
            <% if (posts.length == 0) { %>
                <h4 class="text-center my-5">No posts yet...</h4>
            <% } %>
            <%- include("partials/post-list", {post: posts, user: user}) %>
        </div>
    </div>
</div>

<script src="/js/script.js"></script>
<script src="/js/profile.js"></script>
<%- include("partials/footer") %>